<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitAirlines.Mobile.Views.ChooseSeatsPage"
             xmlns:vm="clr-namespace:FitAirlines.Mobile.ViewModels"
             xmlns:local="clr-namespace:FitAirlines.Mobile.Converters"
             x:DataType="vm:ChooseSeatsViewModel"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:ImageConverter x:Key="imgConv"></local:ImageConverter>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout>

            <StackLayout Orientation="Horizontal" Spacing="0">
                <Button WidthRequest="250" BackgroundColor="LightSkyBlue" Text="Departure" Clicked="ButtonDeparture_Clicked"  BorderWidth="2" BorderColor="Black"/>
                <Button WidthRequest="250" BackgroundColor="LightSkyBlue" Text="Arrival" Clicked="ButtonArrival_Clicked"  BorderWidth="2" BorderColor="Black"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="Center">
                <Label FontSize="Large" Text="CHOSEN SEAT: "/>
                <Label FontAttributes="Bold" FontSize="Large" Text="{Binding ChosenSeat}"/>
            </StackLayout>
            <BoxView HeightRequest="2" CornerRadius="20" BackgroundColor="Black" Margin="20,0,20,0"/>
            <Grid x:Name="gridHeader" Padding="20,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

            </Grid>

            <BoxView HeightRequest="2" CornerRadius="20" BackgroundColor="Black" Margin="20,0,20,0"/>

            <ScrollView>

                <Grid Padding="20,0,20,0" x:Name="seatsGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </ScrollView>

            <Button HeightRequest="50" BackgroundColor="LightSkyBlue" Text="Reserve Selected Seats" Clicked="Button_Clicked" BorderWidth="2" BorderColor="Black"/>


        </StackLayout>

